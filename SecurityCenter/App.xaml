<Application x:Class="SecurityCenter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SecurityCenter"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/Ressources/Colors.xaml" />
                <ResourceDictionary Source="Theme/Ressources/Fonts.xaml" />
                <ResourceDictionary Source="Theme/Styles/Buttons.xaml" />
                <ResourceDictionary Source="Theme/Styles/Cards.xaml" />
                <ResourceDictionary Source="Theme/Styles/UserComponent.xaml" />
                <ResourceDictionary Source="Theme/Styles/RotatableImage.xaml" />
                <ResourceDictionary Source="Theme/Styles/MenuItem.xaml" />
                <ResourceDictionary Source="Theme/Styles/ProgressBar.xaml" />
                <ResourceDictionary Source="Theme/Styles/TextFields.xaml" />
                <ResourceDictionary Source="Theme/Styles/Lists.xaml" />
                <ResourceDictionary Source="Theme/Styles/ScrollBars.xaml" />
                <ResourceDictionary Source="Theme/Styles/Menus.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
