<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:AquaMaintenancer.Theme.Components"
                    xmlns:conv="clr-namespace:AquaMaintenancer.Theme.Converter"
                    xmlns:local="clr-namespace:AquaMaintenancer.Theme.Styles">

    <Style TargetType="{x:Type controls:TextField}">
        <Style.Resources>
            <conv:UpperCaseConverter x:Key="UpperCaseConverter" />
        </Style.Resources>
        <Setter Property="FontFamily" Value="{StaticResource Roboto}" />
        <Setter Property="Template">
            <Setter.Value>

                <ControlTemplate TargetType="{x:Type controls:TextField}">
                    <StackPanel Orientation="Vertical" >
                        <TextBlock
                            Text="{TemplateBinding Label, Converter={StaticResource UpperCaseConverter}}"
                            FontFamily="{TemplateBinding FontFamily}"
                            FontWeight="Bold"
                            FontSize="12"
                            Foreground="{StaticResource TextColor}" Opacity="0.3" />
                        <TextBox />
                    </StackPanel>
                </ControlTemplate>

            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>