<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:AquaMaintenancer.Theme.Components">

    <Style TargetType="{x:Type controls:ProgressBar}">
        <Setter Property="Background" Value="{StaticResource BackgroundCardsColor}"/>
        <Setter Property="Foreground" Value="Green"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ProgressBar}">
                    <StackPanel Orientation="Vertical">
                        <Label Foreground="{StaticResource TextColor}" >Test</Label>
                        <Border x:Name="PART_Track"
                                CornerRadius="2"
                                BorderThickness="1"
                                BorderBrush="{TemplateBinding Background}"/>
                        <Border x:Name="PART_Indicator"
                                CornerRadius="2"
                                BorderThickness="1"
                                HorizontalAlignment="Left"
                                BorderBrush="{TemplateBinding Foreground}"
                                Margin="0,-1,0,1" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>