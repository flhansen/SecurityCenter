<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:AquaMaintenancer.Theme.Components">

    <Style TargetType="{x:Type controls:UserControl}">
        <Setter>
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:UserControl}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="48" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="48" />
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0"  />
                        <StackPanel Grid.Column="1" Orientation="Vertical"></StackPanel>
                        <Image Grid.Column="2" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>