<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:AquaMaintenancer.Theme.Components"
                    xmlns:prop="clr-namespace:AquaMaintenancer.Theme.CustomProperties">

<Style TargetType="{x:Type controls:UserComponent}">
        <Setter Property="Width" Value="200" />
        <Setter Property="Height" Value="50" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:UserComponent}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="48" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="48" />
                        </Grid.ColumnDefinitions>
                        <Ellipse Grid.Column="0" Height="48" Width="48" Fill="Gray">
                            <!--<Ellipse.Fill>
                                <Brush />
                            </Ellipse.Fill>-->
                        </Ellipse>
                        <Border Grid.Column="1" Padding="20,0">
                            <StackPanel Orientation="Vertical" 
                                        prop:ContainerSpacing.Spacing="4"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                <TextBlock Foreground="{StaticResource TextColor}">Klaus Dieter</TextBlock>
                                <TextBlock Foreground="{StaticResource TextColor}">Hauswirtschafter</TextBlock>
                            </StackPanel>
                        </Border>

                        <Image Grid.Column="2" RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <RotateTransform x:Name="AnimRotateTransform" Angle="0" />
                            </Image.RenderTransform>
                            <Image.Triggers>
                                <EventTrigger RoutedEvent="=MouseDown">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="AnimRotateTransform"
                                                             Storyboard.TargetProperty="Angle"
                                                             By="10"
                                                             To="180"
                                                             Duration="0:0:0.5"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Image.Triggers>
                        </Image>

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>