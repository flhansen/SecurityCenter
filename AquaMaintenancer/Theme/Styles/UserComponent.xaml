<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:AquaMaintenancer.Theme.Components"
                    xmlns:prop="clr-namespace:AquaMaintenancer.Theme.CustomProperties">

<Style TargetType="{x:Type controls:UserComponent}">
        <Setter Property="Width" Value="200" />
        <Setter Property="Height" Value="50" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:UserComponent}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="48" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="48" />
                        </Grid.ColumnDefinitions>
                        <Ellipse Grid.Column="0" Height="48" Width="48" Fill="Gray">
                            <!--<Ellipse.Fill>
                                <Brush />
                            </Ellipse.Fill>-->
                        </Ellipse>
                        <StackPanel Grid.Column="1" 
                                    Orientation="Vertical" 
                                    prop:ContainerSpacing.Spacing="4"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <TextBlock Foreground="{StaticResource TextColor}">Klaus Dieter</TextBlock>
                            <TextBlock Foreground="{StaticResource TextColor}">Hauswirtschafter</TextBlock>
                        </StackPanel>
                        <Image Grid.Column="2" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>