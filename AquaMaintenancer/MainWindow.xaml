<Window x:Class="AquaMaintenancer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AquaMaintenancer"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:controls="clr-namespace:AquaMaintenancer.Theme.Components"
        xmlns:vm="clr-namespace:AquaMaintenancer.UILogic.ViewModels;assembly=AquaMaintenancer.UILogic"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="{StaticResource BackgroundColor}" TextOptions.TextFormattingMode="Ideal">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <controls:Card Title="ListView Example" Padding="0, 0, 0, 8" VerticalAlignment="Center" HorizontalAlignment="Center" Width="600">
        <controls:ListView ItemsSource="{Binding TestViewModels}" AutoGenerateColumns="False" IsReadOnly="True" Height="150">
            <controls:ListView.Columns>
                <DataGridTextColumn Header="Header 1" Binding="{Binding Prop1}" />
                <DataGridTextColumn Header="Header 2" Binding="{Binding Prop2}" />
                <DataGridTextColumn Header="Header 3" Binding="{Binding Prop3}" />
                <DataGridTextColumn Header="Header 4" Binding="{Binding Prop4}" />
                <DataGridTextColumn Header="Header 5" Binding="{Binding Prop5}" />
            </controls:ListView.Columns>
        </controls:ListView>
    </controls:Card>
</Window>
